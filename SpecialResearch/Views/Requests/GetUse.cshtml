@model SpecialResearch.Models.Request

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Предписание для заявки</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="GetUse">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="UseOrder" class="control-label"></label>
                    <input asp-for="UseOrder" class="form-control" />
                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Выдать предписание" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Вернуться к списку заявок без выдачи предписания</a>
    </div>

</body>
</html>
