@model SpecialResearch.Models.Request

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Новая заявка</h4>
    <hr />

    <form asp-action="Create">
        <div class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-md-6">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" readonly />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CreatorId" class="control-label"></label>
                <input asp-for="CreatorId" class="form-control" hidden></input>
                <label class="form-control"> @ViewBag.UserName</label>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ControlerId" class="control-label" hidden></label>
                <input asp-for="ControlerId" class="form-control" hidden></input>
            </div>

        </div>

        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <a href="/templates/Данные для заявки.xlsx" download="">Скачать шаблон заявки</a>
        </div>
    </form>
    <form asp-action="UploadRequest" method="post" enctype="multipart/form-data">
        <input class="form-control-file" type="file" name="UploadedFile" />
        <input type="submit" value="Загрузить" />
    </form>


    <div>
        <a asp-action="Index">Вернуться к списку</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
